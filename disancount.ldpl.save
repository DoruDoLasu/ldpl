

 DATA:
    n is number
    mod is number

 PROCEDURE:
    # Ask user for a number
    display "Enter a number: "
    accept n
    display "We'll do a disan count from " n crlf

    # Print all even numbers between n and 0
    while n is greater than or equal to 0 do
        modulo n by 2 in mod
        if mod is equal to 0 then
            display n " is even!" crlf
        end if
        decr n
    repeat

    display "Bye bye!" crlf

